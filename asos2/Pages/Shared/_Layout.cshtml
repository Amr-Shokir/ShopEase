<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ISIS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* New Footer Styles */
        .minimal-footer {
            background-color: #000;
            color: #fff;
            padding: 15px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 13px;
            margin-top: 60px;
            /* Ensures footer stays at bottom if content is short */
            width: 100%;
        }

        .footer-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .social-icon {
            font-size: 20px;
            color: #fff;
            text-decoration: none;
            transition: opacity 0.2s;
        }

            .social-icon:hover {
                opacity: 0.8;
                color: #fff;
            }

        .footer-links {
            display: flex;
            align-items: center;
            gap: 15px;
            border-left: 1px solid #555;
            padding-left: 15px;
            height: 20px; /* Height of the divider line */
        }

        .footer-link {
            color: #ddd;
            text-decoration: none;
        }

            .footer-link:hover {
                text-decoration: underline;
                color: #fff;
            }
    </style>
</head>
<body style="display:flex; flex-direction:column; min-height:100vh;">

    <header>
        <a href="/" class="logo">ISIS</a>

        <div class="search-container">
            <form method="get" action="/">
                <input type="text" name="SearchString" class="search-input" placeholder="Search for items and brands" value="@Context.Request.Query["SearchString"]">
                <i class="fa-solid fa-magnifying-glass search-icon"></i>
            </form>
        </div>

        <div class="header-actions">
            @if (User.Identity.IsAuthenticated)
            {
                <a href="/Profile" class="icon-btn" title="My Profile">
                    <i class="fa-solid fa-user"></i>
                </a>

                <form method="post" asp-page="/Logout" style="display:inline;">
                    <button type="submit" class="icon-btn" title="Sign Out" style="background:none; border:none; padding:0; cursor:pointer;">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </button>
                </form>
            }
            else
            {
                <a href="/Login" class="icon-btn" title="Sign In">
                    <span style="font-size: 14px; font-weight: bold; margin-right: 5px;">LOGIN</span>
                    <i class="fa-regular fa-user"></i>
                </a>
            }

            <a href="/Cart" class="icon-btn"><i class="fa-solid fa-cart-shopping"></i></a>
        </div>
    </header>

    <div style="background-color: #f8f8f8; border-bottom: 1px solid #ddd; padding: 10px 0;">
        <div style="display: flex; justify-content: center; gap: 20px; font-size: 13px; font-weight: 600; text-transform: uppercase;">
            <a href="/?category=jackets_coats" style="color: #333;">Jackets</a>
            <a href="/?category=hoodies_sweatshirts" style="color: #333;">Hoodies</a>
            <a href="/?category=t-shirts_vests" style="color: #333;">T-Shirts</a>
            <a href="/?category=pants" style="color: #333;">Pants</a>
            <a href="/?category=shorts" style="color: #333;">Shorts</a>
            <a href="/?category=shoes" style="color: #333;">Shoes</a>
            <a href="/?category=wallets" style="color: #333;">Wallets</a>
            <a href="/?category=socks" style="color: #333;">Socks</a>
            <a href="/" style="color: #d01345;">View All</a>
        </div>
    </div>

    <main role="main" style="flex:1;">
        @RenderBody()
    </main>

    <footer class="minimal-footer">
        <div class="footer-left">
            &copy; 2025 ISIS
        </div>

        <div class="footer-right">
            <a href="#" class="social-icon"><i class="fa-brands fa-instagram"></i></a>
            <a href="#" class="social-icon"><i class="fa-brands fa-facebook"></i></a>

            <div class="footer-links">
                <a href="/Privacy" class="footer-link">Privacy & Cookies</a>
                <a href="#" class="footer-link">Ts&Cs</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>